<script>
	$( document ).ready( function(){
		$('#Red').slider({
			//orientation: 'vertical'
			value : 0,
			min: 0, 
			max: 255,
			step: 1,
			slider: function( event, ui ) {
				console.log('slide :', $(this).slider('value') );
				console.log('slide :', ui.value );
			}
		});
		
	$( document ).ready( function(){
